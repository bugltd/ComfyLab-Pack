{
	"compilerOptions": {
		"target": "ES2017",
		"module": "NodeNext",
		"lib": ["ES2017", "DOM"],
		"skipLibCheck": true,

		"moduleResolution": "nodenext",
		"removeComments": false,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"strictNullChecks": true,

		"outDir": "./"
	},
	"include": ["./*.ts"],
	"exclude": []
}
